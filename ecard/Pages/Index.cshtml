@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}





<html>
<head>
    <title>Amazing Waterfalls</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" align="center">
            <div class="item active">
                <img src="~/images/wf-1-shifen.jpg" />
                <div class="carousel-caption">
                    <h3>Shifen Waterfall</h3>
                    <p><a href="https://www.goteamjosh.com/blog/shifen">Visit Website Here</a></p>
                </div>
            </div>

            <div class="item">
                <img src="~/images/wf-2-glju.jpg" />
                <div class="carousel-caption">
                    <h3>Gljúfrabúi - The Secret Waterfall</h3>
                    <p> </p>
                </div>
            </div>

            <div class="item">
                <img src="~/images/wf-2-sherman.jpg" />
                <div class="carousel-caption">
                    <h3>Webster's Waterfall</h3>
                    <p><a href="https://www.smithsonianmag.com/travel/welcome-waterfall-capital-world-180964109/">Visit Website Here</a></p>
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>



</html>




